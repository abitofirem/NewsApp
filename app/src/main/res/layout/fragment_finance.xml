<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".AFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance_markets_title"
            android:textColor="?attr/colorOnBackground"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="4dp"
            />
        <ProgressBar
            android:id="@+id/main_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/main_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="@string/finance_data_load_error"
            android:visibility="gone" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finance_bist_100_index"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_bist_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:text="108.841" />

                    <TextView
                        android:id="@+id/tv_bist_change_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        tools:text="-0.03%"
                        tools:textColor="@color/negative_change_color" />

                    <TextView
                        android:id="@+id/tv_bist_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="13:35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tv_bist_min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="Min: 108.139" />

                    <TextView
                        android:id="@+id/tv_bist_max"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="Max: 108.975" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance_exchange_rates"
            android:textColor="?attr/colorOnBackground"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_all_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_currency" />

        <TextView
            android:id="@+id/tv_show_all_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finance_show_all"
            android:textColor="?attr/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="-16dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance_precious_metals"
            android:textColor="?attr/colorOnBackground"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_gold_silver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="2"
            tools:listitem="@layout/item_gold_silver" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance_crypto_currencies"
            android:textColor="?attr/colorOnBackground"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cripto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_cripto" />

        <TextView
            android:id="@+id/tv_show_all_cripto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finance_show_all"
            android:textColor="?attr/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="-16dp"
            android:visibility="gone"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance_commodities"
            android:textColor="?attr/colorOnBackground"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_emtia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_emtia" />

        <TextView
            android:id="@+id/tv_show_all_emtia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finance_show_all"
            android:textColor="?attr/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="-16dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance_currency_converter_title"
            android:textColor="?attr/colorOnBackground"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finance_currency_converter_subtitle"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_from_currency"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/finance_usd_default"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorOnSurface"
                        app:strokeColor="?attr/colorOnSurfaceVariant"
                        app:cornerRadius="12dp"
                        android:layout_marginEnd="8dp"/>

                    <ImageButton
                        android:id="@+id/btn_swap_currencies"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circular_accent_background"
                        android:src="@drawable/ic_swap_horiz"
                        app:tint="?attr/colorOnSecondary"
                        android:contentDescription="@string/finance_swap_currencies_description"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_to_currency"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/finance_try_default"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorOnSurface"
                        app:strokeColor="?attr/colorOnSurfaceVariant"
                        app:cornerRadius="12dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/et_amount_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/finance_amount_hint"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="100" />

                    <TextView
                        android:id="@+id/tv_rate_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        tools:text="1 USD = 32.50 TRY"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tv_amount_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/text_on_transparent_card_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="3250.00"/>

                    <TextView
                        android:id="@+id/tv_rate_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        tools:text="1 TRY = 0.0307 USD"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_convert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/finance_convert_button"
                    android:backgroundTint="?attr/colorSecondary"
                    android:textColor="?attr/colorOnSecondary"
                    app:cornerRadius="12dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>