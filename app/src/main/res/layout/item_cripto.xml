<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background_light_transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_cripto_name"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_transparent_card_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Bitcoin (BTC)" />

        <TextView
            android:id="@+id/tv_cripto_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_on_transparent_card_primary"
            android:textSize="15sp"
            tools:text="7,477.57 USD" />

        <TextView
            android:id="@+id/tv_cripto_change_day"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="-0.91%"
            tools:textColor="@color/negative_change_color" />

    </LinearLayout>
</androidx.cardview.widget.CardView>