<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background_light_transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_day_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_transparent_card_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bugün" />

        <TextView
            android:id="@+id/tv_date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/accent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_day_today"
            tools:text="8 Temmuz, Salı" />

        <ImageView
            android:id="@+id/iv_weather_icon_today"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Hava durumu ikonu"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_today"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_description_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_on_transparent_card_primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon_today"
            tools:text="Açık ve Güneşli" />

        <TextView
            android:id="@+id/tv_current_degree_today"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:textColor="@color/text_accent_color"
            android:textSize="64sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:gravity="end" app:layout_constraintTop_toBottomOf="@+id/tv_description_today"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center" tools:text="30°C" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" /> <LinearLayout
        android:id="@+id/ll_details"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/tv_current_degree_today"
        app:layout_constraintBottom_toBottomOf="@+id/tv_current_degree_today"
        app:layout_constraintStart_toEndOf="@+id/guideline_center" app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_min_degree_today_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_transparent_card_secondary"
            android:textSize="18sp"
            tools:text="Min: 18.22°C" />

        <TextView
            android:id="@+id/tv_max_degree_today_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_on_transparent_card_secondary"
            android:textSize="18sp"
            tools:text="Max: 35.65°C" />

        <TextView
            android:id="@+id/tv_humidity_today_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_on_transparent_card_secondary"
            android:textSize="18sp"
            tools:text="Nem: 43%" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>