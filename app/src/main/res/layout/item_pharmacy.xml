<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/pharmacy_card_background"
    app:strokeColor="@color/card_border_light"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_pharmacy_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/pharmacy_name_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_expand_toggle"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ECZANE ADI BURADA" />

        <ImageView
            android:id="@+id/iv_expand_toggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Expand/Collapse"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_on_transparent_card_primary"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pharmacy_city_label"
            android:textColor="@color/pharmacy_detail_label"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pharmacy_name" /> <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pharmacy_detail_value"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_city_label"
        app:layout_constraintTop_toTopOf="@id/tv_city_label"
        android:layout_marginStart="4dp"
        tools:text="İlAdı" />

        <TextView
            android:id="@+id/tv_district_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pharmacy_district_label"
            android:textColor="@color/pharmacy_detail_label"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_city_label" />

        <TextView
            android:id="@+id/tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pharmacy_detail_value"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_district_label"
            app:layout_constraintTop_toTopOf="@id/tv_district_label"
            android:layout_marginStart="4dp"
            tools:text="İlçeAdı" />

        <TextView
            android:id="@+id/tv_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pharmacy_phone_label"
            android:textColor="@color/pharmacy_detail_label"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_district_label" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pharmacy_detail_value"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_phone_label"
            app:layout_constraintTop_toTopOf="@id/tv_phone_label"
            android:layout_marginStart="4dp"
            tools:text="0(312)*** ****" />

        <LinearLayout
            android:id="@+id/ll_expandable_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_label" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pharmacy_address_label"
                android:textColor="@color/pharmacy_detail_label"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/pharmacy_detail_value"
                android:textSize="14sp"
                tools:text="ECZANE ADRESİ VE DETAYLARI BURAYA GELECEK" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_show_on_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:text="@string/show_on_map_button"
                android:textColor="@color/text_on_accent_light"
                android:backgroundTint="@color/accent"
                app:cornerRadius="12dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>