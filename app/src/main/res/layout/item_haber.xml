<?xml version="1.0" encoding="utf-8"?>
<!---RecyclerView içindeki her bir haber öğesinin
nasıl görüneceğini tanımlayan XML dosyası.

-->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/haberImageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:contentDescription="Haber Görseli"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/haberBaslikTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                tools:text="Haber Başlığı Buraya Gelecek"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/haberIcerikTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Bu, haberin kısa içeriğidir. Çok uzun metinler burada kesilir ve üç nokta ile devam eder..." />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_save_news"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_save"
            android:contentDescription="@string/save_icon_description"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true" />

    </FrameLayout>

</androidx.cardview.widget.CardView>